extends layout

block content
  h1 Candy: #{item.name}

  p #[strong Description:] #{item.description}
  p #[strong Amount:] #{item.amount}
  p #[strong Price:] #{item.price}
  p #[strong Categories: ]
    each val, index in item.categories
      a(href=val.url) #{val.name}
      if index < item.categories.length - 1
        |,&nbsp;

  hr
  p
    a(href=item.url+'/delete') Delete Item
  p
    a(href=item.url+'/update') Update Item