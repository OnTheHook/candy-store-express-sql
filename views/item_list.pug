extends layout

block content
  h1= title
  if item_list.length
    ul
      each item in item_list
        li
          a(href=item.url) #{item.name}
          | &nbsp;(
          each category, index in item.categories
            if item.categories.length - 1 != index
              | #{category},&nbsp;
            else 
              | #{category}
          | )
  else
    p There are no candies.